<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/MovieListFragment">

   <fragment
        android:id="@+id/splashFragment"
        android:name="com.vakifbank.WatchWise.ui.fragment.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_MovieListFragment"
            app:destination="@id/MovieListFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/MovieListFragment"
        android:name="com.vakifbank.WatchWise.ui.fragment.MovieListFragment"
        android:label="MovieListFragment"
        tools:layout="@layout/fragment_movie_list" >
        <action
            android:id="@+id/action_MovieListFragment_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="com.vakifbank.WatchWise.ui.fragment.MovieDetailFragment"
        android:label="fragment_movie_detail"
        tools:layout="@layout/fragment_movie_detail" >
        <argument
            android:name="movie_data"
            app:argType="com.vakifbank.WatchWise.domain.model.Movie"
            app:nullable="true"/>



    </fragment>

</navigation>